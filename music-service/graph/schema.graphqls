type Album {
  id: ID!
  name: String!
  year: Int!
  artist: String!
  genre: String!
  uploader: User!
}

type User {
  id: ID!
  username: String!
} 

input NewAlbum {
  name: String!
  artist: String!
  genre: String!
}

input AlbumSearch {
  name: String!
  artist: String!
}

type Query {
  getAlbum(input: AlbumSearch!): [Album!]!
  getAllAlbums: [Album!]!
}

type Mutation {
  uploadAlbum(input: NewAlbum!): Album!
}